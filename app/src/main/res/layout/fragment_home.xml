<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    tools:context=".fragments.HomeFragment">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:drawableEnd="@drawable/ic_round_format_list_bulleted_24"
            android:drawableRight="@drawable/ic_round_format_list_bulleted_24"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Recently added songs"
            android:textColor="#333333"
            android:textSize="24dp"/>

        <androidx.cardview.widget.CardView
            android:background="@drawable/green"
            android:elevation="7dp"
            app:cardCornerRadius="7dp"
            android:layout_width="230dp"
            android:layout_marginVertical="30dp"
            android:layout_height="125dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/song"/>
        </androidx.cardview.widget.CardView>

        <TextView
            android:drawableEnd="@drawable/ic_round_format_list_bulleted_24"
            android:drawableRight="@drawable/ic_round_format_list_bulleted_24"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Recently played albums"
            android:textColor="#333333"
            android:textSize="24dp"/>

        <androidx.cardview.widget.CardView
            android:background="@drawable/green"
            android:elevation="7dp"
            app:cardCornerRadius="7dp"
            android:layout_width="230dp"
            android:layout_marginVertical="30dp"
            android:layout_height="125dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/album"/>
        </androidx.cardview.widget.CardView>

        <TextView
            android:drawableEnd="@drawable/ic_round_format_list_bulleted_24"
            android:drawableRight="@drawable/ic_round_format_list_bulleted_24"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Recently played albums"
            android:textColor="#333333"
            android:textSize="24dp"/>

        <androidx.cardview.widget.CardView
            android:background="@drawable/green"
            android:elevation="7dp"
            app:cardCornerRadius="75dp"
            android:layout_width="150dp"
            android:layout_marginVertical="30dp"
            android:layout_height="150dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/lauv"/>
        </androidx.cardview.widget.CardView>

    </LinearLayout>


</ScrollView>
</FrameLayout>